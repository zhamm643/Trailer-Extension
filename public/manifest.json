{
  "manifest_version": 2,
  "name": "Trailer Sales Extension",
  "version": "1.0",
  "description": "Automates posting trailers to Facebook Marketplace",
  "permissions": ["activeTab", "storage", "https://*.facebook.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://connect.facebook.net; object-src 'self'"
}
